@model string
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Clinician Dashboard";
}
<style>
:root { --bg: #0b1020; --bg-soft: #11162a; --bg-card: #181f39; --accent: #5b8dff; --accent-soft: rgba(91,141,255,.15); --danger: #ff5b7a; --warning: #ffc857; --text-main: #f7f8ff; --text-muted: #a7b0d6; --border-soft: #262c4a; }
body { background: radial-gradient(circle at top, #171f3c 0, #070915 55%); color: var(--text-main); font-family: system-ui, sans-serif; margin: 0; }
.dash-layout { display: grid; grid-template-columns: 280px 1fr; min-height: 100vh; }
.sidebar { background: rgba(3,6,20,0.95); border-right: 1px solid var(--border-soft); padding: 20px; display: flex; flex-direction: column; gap: 16px; }
.sidebar h2 { margin: 0; }
.sidebar-sub { color: var(--text-muted); font-size: 0.85rem; }
.patient-list { display: flex; flex-direction: column; gap: 6px; overflow-y: auto; }
.patient-item { padding: 10px; border-radius: 10px; background: #101427; text-decoration: none; color: white; }
.patient-meta { font-size: 0.75rem; color: var(--text-muted); display:flex; gap:6px; }
.risk-badge { padding: 2px 8px; border-radius: 999px; font-size: 0.7rem; }
.risk-badge.high { background: rgba(255,91,122,.15); color:#ff5b7a; }
.risk-badge.medium { background: rgba(255,200,87,.15); color:#ffc857; }
.risk-badge.low { background: rgba(106,207,151,.15); color:#6acf97; }
.main { padding: 30px; display: flex; flex-direction: column; gap: 20px; }
.stat-row { display: grid; grid-template-columns: repeat(3,1fr); gap: 16px; }
.stat-card { background:#181f39; padding:20px; border-radius:14px; border:1px solid var(--border-soft); }
.stat-label { font-size:0.8rem; color:var(--text-muted); }
.stat-value { font-size:1.4rem; font-weight:600; margin-top:6px; }
.patient-header { display:flex; justify-content:space-between; align-items:center; }
.btn-chat { background:var(--accent); padding:10px 16px; border-radius:999px; color:white; text-decoration:none; }
.panel { background:var(--bg-soft); padding:20px; border-radius:14px; border:1px solid var(--border-soft); }
.metric-box { background:#11172e; padding:10px; border-radius:10px; }
.alert-item { padding:10px; border-radius:10px; }
.alert-item.warning { background: rgba(255,200,87,.15); }
.alert-item.critical { background: rgba(255,91,122,.15); }
</style>

<div class="dash-layout">
    <aside class="sidebar">
        <h2>Patients</h2>
        <p class="sidebar-sub">Assigned to you</p>

        <div class="patient-list">
            <div class="patient-item">
                <div>Patient One</div>
                <div class="patient-meta">
                    <span class="risk-badge high">High</span>
                    <span class="alert-pill">3 alerts</span>
                </div>
            </div>
            <div class="patient-item">
                <div>Patient Two</div>
                <div class="patient-meta">
                    <span class="risk-badge medium">Medium</span>
                </div>
            </div>
            <div class="patient-item">
                <div>Patient Three</div>
                <div class="patient-meta">
                    <span class="risk-badge low">Low</span>
                </div>
            </div>
        </div>
    </aside>

    <main class="main">
        <div class="row">
            <div class="col-12">
                <h1>Clinician Dashboard</h1>
                <p class="text-muted">Welcome, <strong>@Model</strong></p>
            </div>
        </div>

        <section class="stat-row">
            <div class="stat-card">
                <div class="stat-label">Active Patients</div>
                <div class="stat-value">3</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">High Risk</div>
                <div class="stat-value">1</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Unread Alerts</div>
                <div class="stat-value">4</div>
            </div>
        </section>

        <section class="patient-header">
            <div>
                <h2>Patient One</h2>
                <p>Age 72 • Room B-204</p>
            </div>
            <a class="btn-chat">?? Chat with Patient</a>
        </section>

        <section class="grid-2" style="display:grid; grid-template-columns:1.5fr 1fr; gap:20px;">
            <div class="panel">
                <h3>Pressure Metrics</h3>
                <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:10px; margin-top:10px;">
                    <div class="metric-box">
                        <div>Risk Score</div>
                        <div style="font-size:1.2rem; font-weight:600;">87</div>
                    </div>
                    <div class="metric-box">
                        <div>Peak Pressure Index</div>
                        <div style="font-size:1.2rem; font-weight:600;">92</div>
                    </div>
                    <div class="metric-box">
                        <div>Contact Area</div>
                        <div style="font-size:1.2rem; font-weight:600;">63%</div>
                    </div>
                </div>
            </div>

            <div class="panel">
                <h3>Recent Alerts</h3>
                <div class="alert-item critical">High pressure detected at sacrum</div>
                <div class="alert-item warning">Elevated pressure left heel</div>
            </div>
        </section>

        <section class="grid-2" style="display:grid; grid-template-columns:1fr 1fr; gap:20px; margin-top:20px;">
            <div class="panel">
                <h3>Patient Details</h3>
                <p><strong>Name:</strong> Patient One</p>
                <p><strong>Age:</strong> 72</p>
                <p><strong>Room:</strong> B-204</p>
                <p><strong>Medical Notes:</strong> Mobility reduced, needs reposition schedule every 2 hours.</p>
            </div>

            <div class="panel">
                <h3>Live Pressure Map</h3>
                <div style="height:180px; background:#0d1330; border-radius:12px; display:flex; align-items:center; justify-content:center; color:#7b85b8;">?? Live heatmap placeholder</div>
            </div>
        </section>

        <section class="panel" style="margin-top:20px;">
            <h3>All Alerts for This Patient</h3>
            <div class="alert-item critical">(10 min ago) High sacrum pressure detected</div>
            <div class="alert-item warning">(2 hrs ago) Elevated left heel pressure</div>
            <div class="alert-item" style="background:transparent;color:var(--text-muted);">(5 hrs ago) Pressure normalized</div>
        </section>
    </main>
</div>
